<script id="dataNapiContainerEl" type="text/template">
    <% if (napis.length) { %>
        <% napis.forEach(function(napi){ %>
            <tr>
                <td><%= napi.napi_id %></td>
                <td><%= napi.napi_no_reg %></td>
                <td><%= napi.napi_nama %></td>
                <td><%= napi.blok_nama + ' / '+napi.nama_kamar %></td>
                <td>
                <% 
                if  (napi.napi_booked == 1) {%>
                <button class="btn btn-default btn-add-book" data-id-napi="<%= napi.napi_id%>" disabled="true"> booked </button>
                <% console.log(napi.napi_booked)%>
                <% }else{%>
               <button class="btn btn-primary btn-add-book" data-id-napi="<%= napi.napi_id%>"> book </button>
                <% }%>
                </td>
            </tr>
        <% }) %>
    <% } %>
</script>

<script id="dataBlokEl" type="text/template">
    <% if (bloks.length) { %>
        <option value="all" selected="true">all</option>
        <% bloks.forEach(function(blok){ %>
            <option value="<%= blok.blok_master_id %>"><%= blok.blok_nama %></option>
        <% }) %>
    <% } %>
</script>

<script id="dataKamarEl" type="text/template">
    <% if (kamars.length) { %>
        <% kamars.forEach(function(kamar){ %>
            <option value="<%= kamar.master_kamar_id %>"><%= kamar.nama_kamar %></option>
        <% }) %>
    <% } %>
</script>

<script id="dataDiagramEl" type="text/template">
        <tr>
            <td colspan="3"></td>
        </tr>
